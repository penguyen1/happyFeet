<!DOCTYPE html>
<html>
<head>
  <%- include ./../boot_partials/head %>
  <title>Happy Feet</title>
</head>
<body>

  <div class="ui middle aligned center aligned grid starter-template">
    <h2> Welcome! Please Log In </h2><br><br>
    <div class="column">
      <!-- b64 here -->
      <form class="ui large form" action="/users/login" method="post">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="email" name="email" placeholder="E-mail Address"> 
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <input type="password" name="password" placeholder="Password">
            </div><br>
            <div class="ui message"> 
              <%= data %><br><a href="/users/new">Sign Up Here!</a> 
            </div>
          </div>
          <!-- <div class="ui fluid large teal submit button">Login</div> -->
          <br><input type="submit" value="Submit" class="ui fluid large teal submit button">
        </div>
      </form>
      <br><br>
    </div>
  </div>
  <%- include ./../boot_partials/footer %>
</body>
</html>
